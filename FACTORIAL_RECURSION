#include <stdio.h>  //WAP to find the factorialof an int using recursion
long int factorial(int n)
{
    if (n>=1)
    return n*factorial(n-1);
    else 
    return 1;
}
int main()
{
    int n;
    printf("Enter an integer:");
    scanf("%d", &n);
    printf("Factorial of %d=%ld",n,factorial(n));
    return 0;
}
